{
  "name": "devolunch",
  "version": "0.1.0",
  "description": "DevoLunch is an lunch app used for providing the todays lunch menus nearby the office.",
  "license": "MIT",
  "scripts": {
    "dev": "concurrently --names 'SERVER,CLIENT' --prefix-colors '#68A063,#61DAFB' 'pnpm --filter server dev' 'wait-on http://127.0.0.1:8080/health && pnpm --filter client dev'",
    "dev:server": "pnpm --filter server dev",
    "dev:client": "pnpm --filter client dev",
    "prepare": "husky install",
    "lint": "pnpm --filter client lint && pnpm --filter server lint",
    "typecheck": "pnpm --filter client --filter server typecheck",
    "preinstall": "npx only-allow pnpm"
  },
  "engines": {
    "node": "18.x.x"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jayway/devolunch.git"
  },
  "homepage": "https://github.com/jayway/devolunch#readme",
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "pnpm lint"
    ]
  },
  "devDependencies": {
    "concurrently": "8.0.1",
    "husky": "^8.0.0",
    "lint-staged": "^13.2.2",
    "prettier": "^2.8.8",
    "wait-on": "7.0.1"
  },
  "prettier": {
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "all",
    "printWidth": 120
  }
}
