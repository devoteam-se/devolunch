{
  "compilerOptions": {
    "strict": true,
    "outDir": "dist",
    "strictNullChecks": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "composite": true
  },
  "include": ["src/**/*"]
}
